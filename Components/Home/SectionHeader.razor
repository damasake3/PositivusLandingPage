<div class="d-flex align-items-center m-5 gap-4" style="max-width: 1440px;">
    <h2 class="h2 bg-primary m-0 p-2 rounded section-heading text-black">@Title</h2>
    
    <p class="m-0" style="font-size: 18px; width: 500px;">@ChildContent</p>
    
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}